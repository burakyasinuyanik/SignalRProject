@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkında İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkında Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input asp-for="AboutId" type="hidden" />
								<label for="aboutTitle">Hakkında Başlığı</label>
								<input type="text" class="form-control" id="aboutTitle" asp-for="Title" placeholder="Başlığı Giriniz">

							</div>
							<div class="form-group">
								<label for="abaoutDescription">Hakkında Açıklaması</label>
								<textarea rows="5" class="form-control" id="abaoutDescription" asp-for="Description" placeholder="Açıklama Giriniz"></textarea>

							</div>
							<div class="form-group">
								<label for="aboutImgUrl">Hakkında Resmi</label>
								<input type="text" class="form-control" id="aboutImgUrl" asp-for="ImgUrl" placeholder="Resim Url Giriniz">

							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkında Bilgisini Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>






