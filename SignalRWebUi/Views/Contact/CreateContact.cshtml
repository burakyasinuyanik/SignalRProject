@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyon</label>
								<input type="text" class="form-control" id="location" asp-for="Location" placeholder="Lokasyon Giriniz">

							</div>
							<div class="form-group">
								<label for="phone">Telefon Numarası</label>
								<input type="text" class="form-control" id="phone" asp-for="Phone" placeholder="Telefon Numarası Giriniz">

							</div>
							<div class="form-group">
								<label for="contactMail">Mail Bilgisi</label>
								<input type="text" class="form-control" id="contactMail" asp-for="Mail" placeholder="Mail Giriniz">

							</div>
							<div class="form-group">
								<label for="footerDescription">Kişi Sayısı</label>
								<textarea rows="3" class="form-control" id="footerDescription" asp-for="FooterDescription" placeholder="Açıklama Giriniz"></textarea>

							</div>
							
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




