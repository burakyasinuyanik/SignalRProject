@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="BookingName">Ad Soyad</label>
								<input type="text" class="form-control" id="BookingName" asp-for="Name" placeholder="Ad Soyad Giriniz">

							</div>
							<div class="form-group">
								<label for="phone">Telefon Numarası</label>
								<input type="text" class="form-control" id="phone" asp-for="Phone" placeholder="Telefon Numarası Giriniz">

							</div>
							<div class="form-group">
								<label for="bookingMail">Mail Bilgisi</label>
								<input type="text" class="form-control" id="bookingMail" asp-for="Mail" placeholder="Mail Giriniz">

							</div>
							<div class="form-group">
								<label for="personCount">Kişi Sayısı</label>
								<input type="number" class="form-control" id="personCount" asp-for="PersonCount" placeholder="Kişi Sayısını Giriniz">

							</div>
							<div class="form-group">
								<label for="personCount">Tarih Bilgisi</label>
								<input type="datetime-local" class="form-control" id="personCount" asp-for="Date" >

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyon Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


