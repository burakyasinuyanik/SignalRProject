@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mail Atma İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Mail Düzenle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="receiverEmail">Göndereceğiniz Mail Adresi Giriniz</label>
								<input required type="text" class="form-control" id="receiverEmail" asp-for="ReceiverEmail" placeholder="Göndereceğiniz Mail Adresi Giriniz">

							</div>
							<div class="form-group">
								<label for="subject">Mail Konusu Giriniz</label>
								<input required type="text" class="form-control" id="subject" asp-for="Subject" placeholder="Mail Konusu Giriniz" />

							</div>
							<div class="form-group">
								<label for="body">Mail İçeriği Giriniz</label>
								<textarea  required row="3" class="form-control" id="body" asp-for="Body" placeholder="Mail içeriği giriniz."></textarea>

							</div>
						

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Mail At</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




