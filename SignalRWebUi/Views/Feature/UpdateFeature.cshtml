@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Öne Çıkan Alan Düzenle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="FeatureId" />
								<label for="featureTitle1">Başlık 1</label>
								<input type="text" class="form-control" id="featureTitle1" asp-for="Title1" placeholder="Başlık 1'i Giriniz">

							</div>
							<div class="form-group">
								<label for="Description1">Açıklama 1</label>
								<input type="text" class="form-control" id="featureTitle1" asp-for="Description1" placeholder="Açıklama 1'i Giriniz">

							</div>
							<div class="form-group">
								<label for="featureTitle2">Başlık 2</label>
								<input type="text" class="form-control" id="featureTitle2" asp-for="Title2" placeholder="Başlık 2'i Giriniz">

							</div>
							<div class="form-group">
								<label for="Description2">Açıklama 2</label>
								<input type="text" class="form-control" id="featureTitle2" asp-for="Description2" placeholder="Açıklama 2'i Giriniz">

							</div>
							<div class="form-group">
								<label for="featureTitle3">Başlık 3</label>
								<input type="text" class="form-control" id="featureTitle3" asp-for="Title3" placeholder="Başlık 3'i Giriniz">

							</div>
							<div class="form-group">
								<label for="Description3">Açıklama 3</label>
								<input type="text" class="form-control" id="featureTitle3" asp-for="Description3" placeholder="Açıklama 3'i Giriniz">

							</div>


							<div class="card-action">
								<button class="btn btn-primary">Ön Açıklama Alanı Düzenle</button>

							</div>
						</div>
				</form>
			</div>

		</div>
	</div>
</div>






