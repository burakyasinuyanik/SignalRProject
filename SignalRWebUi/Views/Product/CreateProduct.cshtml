@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün Adı</label>
								<input type="text" class="form-control" id="productName" asp-for="Name" placeholder="Ürün Adını Giriniz">

							</div>
							<div class="form-group">
								<label for="productPrice">Ürün Fiyatı</label>
								<input type="text" class="form-control" id="productPrice" asp-for="Price" placeholder="Kategori Adını Giriniz">

							</div>
							<div class="form-group">
								<label for="productImg">Ürün Görseli</label>
								<input type="text" class="form-control" id="productImg" asp-for="ImgUrl" placeholder="Ürün Görselini Giriniz">

							</div>
							<div class="form-group">
								<label for="productCategory">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})

							</div>
							<div class="form-group">
								<label for="productDescription">Ürün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" id="productDescription" asp-for="Description" placeholder="Ürün Açıklamasını Giriniz">

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




