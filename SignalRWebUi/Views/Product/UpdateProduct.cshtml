@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelle</div>
						</div>
						<div class="card-body">
							<input asp-for="ProductId" type="hidden" />
							<div class="form-group">
								<label for="categoryName">Kategori Adı</label>
								<input type="text" class="form-control" id="productName" asp-for="@Model.Name" placeholder="Ürün Adını Giriniz">

							</div>
							<div class="form-group">
								<label for="productPrice">Ürün Fiyatı</label>
								<input type="text" class="form-control" id="productPrice" asp-for="Price" placeholder="Ürün Adını Giriniz">

							</div>
							<div class="form-group">
								<label for="productImg">Ürün Görseli</label>
								<input type="text" class="form-control" id="productImg" asp-for="ImgUrl" placeholder="Ürün Görselini Giriniz">

							</div>
							<div class="form-group">
								<label for="productCategory">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })

							</div>
							<div class="form-group">
								<label for="productDescription">Ürün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" id="productDescription" asp-for="Description" placeholder="Ürün Açıklamasını Giriniz">

							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>





