@model UpdateUserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil Ayarları</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Profil Ayarı Düzenle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="userName">Adınızı Giriniz</label>
								<input type="text" class="form-control" id="userName" asp-for="Name" placeholder="Adınızı Giriniz">

							</div>
							<div class="form-group">
								<label for="SurName">SoyAdınızı Giriniz</label>
								<input type="text" class="form-control" id="SurName" asp-for="Surname" placeholder="SoyAdınızı Giriniz" />

							</div>
							<div class="form-group">
								<label for="userName">Kullanıcı Adınız</label>
								<input type="text" class="form-control" id="userName" asp-for="UserName" placeholder="Kullanıcı Adınızı Giriniz">

							</div>
							<div class="form-group">
								<label for="userMail">Mail Adresiniz</label>
								<input type="email" class="form-control" id="userMail" asp-for="Mail" placeholder="Mail Adresinizi Giriniz">

							</div>
							<div class="form-group">
								<label for="userPassword">Şifrenizi Giriniz</label>
								<input type="password" class="form-control" id="userPassword" asp-for="UserName" placeholder="Şifrenizi Giriniz">

							</div>
							<div class="form-group">
								<label for="userConfirmPassword">Şifrenizi Tekrar Giriniz</label>
								<input type="password" class="form-control" id="userConfirmPassword" asp-for="ConfirmPassword" placeholder="Şifrenizi Tekrar Giriniz">

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Bilgileri Düzenle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


