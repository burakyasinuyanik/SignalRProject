@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">

								<label for="socialMediaTitle">Başlık</label>
								<input type="text" class="form-control" id="socialMediaTitle" asp-for="Title" placeholder="Başlık Giriniz">

							</div>
							<div class="form-group">
								<label for="url">Hesap Url</label>
								<input type="text" class="form-control" id="url" asp-for="Url" placeholder="Hesap Url Bilgisi Giriniz">

							</div>
							<div class="form-group">
								<label for="icon">Icon Bilgisi</label>
								<input  type="text" class="form-control" id="icon" asp-for="Icon" placeholder="Icon Giriniz">

							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




