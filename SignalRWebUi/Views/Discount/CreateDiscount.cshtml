@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								
								<label for="discountTitle">Başlık</label>
								<input type="text" class="form-control" id="discountTitle" asp-for="Title" placeholder="Başlık Giriniz">

							</div>
							<div class="form-group">
								<label for="amount">İndirim Fiyatı</label>
								<input type="text" class="form-control" id="amount" asp-for="Amount" placeholder="İndirim Fiyatı Giriniz">

							</div>
							<div class="form-group">
								<label for="discountDescription">Açıklama Bilgisi</label>
								<textarea rows="3" type="text" class="form-control" id="discountDescription" asp-for="Description" placeholder="Açıklama Giriniz" ></textarea>

							</div>
							<div class="form-group">
								<label for="personCount">Resim Url</label>
								<input type="text" class="form-control" id="personCount" asp-for="ImgUrl" placeholder="Resim Url Giriniz">

							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">İndirim Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>



